<div class="testimonial__card">
  <div class="{% if card_background %}testimonial__card--body {% if box_shadow %} testimonial--card-box-shadow-true{% endif %} card--client-height  color-{{ section.settings.card_color_scheme }} {% if round_image %}rounded--image{% endif %} {% endif %}">
    <div class="{% if card_background %} testimonial__card--header{% endif %} {% unless card_background %}testimonial__card--body  {% if box_shadow %} testimonial--card-box-shadow-true{% endif %} card--client-height  color-{{ section.settings.card_color_scheme }} {% if round_image %}rounded--image{% endif %} {% endunless %}">
      <h3 class="h6">
        {{- testimonial.heading | replace: 'p>', 'span>' -}}
      </h3>
      {{- testimonial.text | replace: 'p>', 'span>' -}}
      {% unless testimonial.rating == 'none' %}
        <div class="testimonial__card--review">
          <div class="rating" role="img" aria-label="5.0 out of 5.0 stars">
            <span
              aria-hidden="true"
              class="rating-star"
              style="--rating: {{ testimonial.rating }}; --rating-max: 5.0; --rating-decimal: 0; --color-icon: {{ section.settings.rating_color }};"
            ></span>
          </div>
        </div>
      {% endunless %}
    </div>
    <div class="testimonial__card--footer">
      <div class="testimonial__card--footer-inner {% if testimonial.author_image %}d-flex{% endif %}">
        {% if testimonial.author_image %}
          <div class="testimonial__card--media {% if testimonial.image != blank %} testimonial__author--media{% else %}placeholder testimonial__author--placeholder{% endif %}">
            {%- if testimonial.image != blank -%}
              <img
                class="multicolumn-card__image"
                srcset="
                  {%- if testimonial.image.width >= 275 -%}{{ testimonial.image | image_url: width: 275 }} 275w,{%- endif -%}
                  {%- if testimonial.image.width >= 550 -%}{{ testimonial.image | image_url: width: 550 }} 550w,{%- endif -%}
                  {{ testimonial.image | image_url }} {{ testimonial.image.width }}w
                "
                src="{{ testimonial.image | image_url: width: 200 }}"
                sizes="200px"
                alt="{{ testimonial.image.alt }}"
                height="{{ testimonial.image.height }}"
                width="{{ testimonial.image.width }}"
                loading="lazy"
              >
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>
        {% endif %}
        <div class="testimonial__card--foter-content {% if testimonial.author_image %}testimonial__space{% endif %}">
          <h4 class="testimonial__author--name h6">{{ testimonial.author_name }}</h4>
          <span class="testimonial__author--title"> 
            {% if testimonial.verified__icon %}
            <span class="verified__icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 14 14" class="svg font-size-sm ml-1 text-tsw" style="height: 1em;fill: #32c2ab;">
                <path d="M6.506.28a1.49 1.49 0 011.806.051l.107.096.808.793c.137.134.307.226.492.267l.141.021 1.118.081a1.49 1.49 0 011.353 1.214l.019.134.109 1.125c.018.2.095.39.22.545l.08.09.808.792c.474.475.57 1.202.249 1.779l-.075.121-.627.936a1.022 1.022 0 00-.177.532l.004.143.109 1.13a1.492 1.492 0 01-.949 1.54l-.136.045-1.088.3a1.018 1.018 0 00-.494.312l-.073.094-.633.932a1.49 1.49 0 01-1.715.57l-.133-.053-1.029-.468a1.019 1.019 0 00-.554-.082l-.14.028-1.094.317c-.65.18-1.332-.1-1.674-.667l-.068-.126-.486-1.027a1.019 1.019 0 00-.394-.433l-.106-.055-1.029-.468a1.494 1.494 0 01-.858-1.588l.029-.14.283-1.1A1.01 1.01 0 00.693 7.5l-.052-.133-.493-1.019A1.493 1.493 0 01.51 4.576l.113-.089.918-.65c.165-.117.291-.28.363-.467l.037-.115.287-1.097a1.49 1.49 0 011.418-1.121l.144.004 1.124.084c.19.015.38-.025.548-.112l.122-.075.922-.658zm3.756 5.105c.686-.682-.401-1.526-.947-.98l-.334.344-2.872 3.05-.57-.612-.327-.34-.359-.367-.123-.124a.687.687 0 10-.947.985l.45.46 1.078 1.133.798.851 3.29-3.502.796-.83.067-.068z"></path>
              </svg>
            </span>
            {% endif %}
            {{ testimonial.author_designation }}
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
