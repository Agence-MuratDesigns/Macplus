{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .section-{{ section.id }} .image-with-text__media {
    --border-radius: {{ section.settings.image_card_corner_radius }}px;
    background: transparent;
  }
  .section-{{ section.id }} .image-with-text-container_box_corner {
     --border-radius-container_box: {{ section.settings.container_box_corner_radius }}px;
  }
  .image-with-text__text--check-list ul li::before {
    --check-list-image: url("{{ "check-mark-list.svg" | asset_url }}") center center no-repeat
  }

.image-with-text__content.justify-content-center {
  padding-top: 0px;
  padding-bottom: 0;
  padding-right: 0rem !important;
}

.image-with-text__grid:not(.desktop-row-reverse) .image-with-text__content {
    padding-inline-start: clamp(0rem,8cqi,12rem);
}
@media only screen and (min-width: 1200px) {
.countdown--timer-banner>.countdown-item {
    padding: 0;
    min-width: 5rem;
}
}

.countdown--timer-banner>.countdown-item {
    align-items: start;
    display: flex;
    text-align: left;
}
.countdown--timer-banner>.countdown-item+.countdown-item:before {
    left: -2rem;
}
.image-with-text__content countdown-timer {
    margin-top: 1.5rem;
}
span.hiligt {
    background: rgba(var(--color-button),var(--alpha-button-background));
    color: #fff;
    padding: 2px 10px;
    border-radius: 3px;
    margin-left: 6px;
    letter-spacing: 0;
}
.hero-image-text-section .image-with-text__text-item {
    padding: 0 !important;
    justify-content: center;
    display: flex;
}
.hero-image-text-section  .image-with-text__content {
    max-width: 53rem;
    display: flex;
}
.hero-image-text-section .image-with-text__grid.desktop-row-reverse .image-with-text__content {
    padding-inline-start: 30px;
}
.hero-image-text-section .desktop-row-reverse  .image-with-text__content.container {
    padding-right: 30px !important;
}
.hero-image-text-section .image-with-text__media img,.hero-image-text-section   .image-with-text__media svg.placeholder-svg {
    overflow: hidden;
    transition: .8s;
}

.hero-image-text-section:hover img, .hero-image-text-section:hover   .image-with-text__media svg.placeholder-svg {
    -webkit-transform: scale(1.05);
    transform: scale(1.05);
}

.hero-image-text-section  .image-with-text__content {
    padding-top: 40px;
    padding-bottom: 40px;
}
.hero-image-text-section .desktop-row-reverse  .image-with-text__content.container {
    padding-right: 55px !important;
}
.hero-image-text-section .image-with-text__media-item {
    position: relative;
}
  
.hero-image-text-section.img_ovrlay_active  .image-with-text__media-item::after {
    position: absolute;
    content: "";
    width: 100%;
    height: 100%;
    background: rgb(var(--color-background));
    top: 0;
    left: 0;
    opacity: 0;
}

  

@media screen and (min-width: 767px) {
     .hero-image-text-section   .image-with-text__media--placeholder.placeholder {
