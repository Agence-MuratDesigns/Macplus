{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

.contact_from_style_2_sec  .contact__button button {
    padding-top: 14px !important;
}
.contact_from_style_2_sec .contact__form--wrapper {
    box-shadow: 0 0 10px #0000001a;
}
.contact_from_style_2_sec span.nam_eml_area {
    max-width: 100%;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
    margin-bottom: 39px;
}
.contact_from_style_2_sec span.nam_eml_area .input__field_form {
    flex: 1;
}
.contact_from_style_2_sec  .input__field_form.field--with-error.email_frm_x {
    margin: 0;
    margin-top: 5px;
}
.contact_from_style_2_sec .cnt_fr_title {
    text-align: center;
    margin-bottom: 40px;
}
.contact_from_style_2_sec  .row.contact__form--container.half--width-section {
    align-items: center;
}
 .contact_from_style_2_sec   .contact__list--wrapper .contact__list--item .contact__list--item-content {
    color: rgba(var(--color-foreground), 1);
}
.contact_from_style_2_sec  .contact__list--wrapper .contact__list--item:nth-child(1) .contact__list--item-content {
    font-weight: 700;
    font-size: calc(var(--font-heading-size) * 3.2rem);
}
.contact_from_style_2_sec  .contact__list--wrapper .contact__list--item:nth-child(2) .contact__list--item-content {
    font-weight: 500;
    font-size: calc(var(--font-heading-size) * 2.6rem);
}
.contact_from_style_2_sec  .contact__list--wrapper .contact__list--item:nth-child(3) .contact__list--item-content {
    font-weight: 400;
    font-size: calc(var(--font-heading-size) * 2rem);
}
.contact_from_style_2_sec .contact__form--content-wrapper span.h4.contact__list--item-heading {
    font-weight: normal !important;
    font-family: var(--font-body-family) !important;
    font-size: 1.5rem;
    margin-bottom: 2px;
}
.contact_from_style_2_sec span.contact_info___icon svg path {
    fill: rgba(var(--color-button), var(--alpha-button-background));
}
.contact_from_style_2_sec span.contact_info___icon svg {
    width: 45px;
    height: 45px;
    fill: rgba(var(--color-button), var(--alpha-button-background));
}
.contact_from_style_2_sec  .contact__list--item {
    display: flex;
    gap: 20px;
    align-items: center;
    margin: 50px 0;
}
.row.contact__form--container.full--width-section .contact__form--content-wrapper {
    padding: 0 15px;
}
.contact_from_style_2_sec .row.contact__form--container.row_reverse {
    flex-direction: row-reverse;
}

/* small mobile :320px. */
@media (max-width: 767px) {
.contact_from_style_2_sec span.nam_eml_area .input__field_form {
    flex: auto;
}
.contact_from_style_2_sec span.nam_eml_area {
    gap: 20px;
    margin-bottom: 25px;
}
.contact_from_style_2_sec .text__area {
    min-height: 8rem;
}
.contact_from_style_2_sec .contact__form--content-wrapper {
    padding-left: 15px !important;
    padding-right: 15px !important;
}
.contact_from_style_2_sec  .contact__list--item {
    margin: 10px 0;
}
.contact_from_style_2_sec  .contact__list--wrapper .contact__list--item:nth-child(1) .contact__list--item-content {
    font-size: calc(var(--font-heading-size) * 2.5rem)!important;
}
.contact_from_style_2_sec .contact__form--content-wrapper {
    padding-top: 20px;
}
.contact_from_style_2_sec  .contact__list--wrapper .contact__list--item:nth-child(2) .contact__list--item-content {
    font-size: calc(var(--font-heading-size) * 2.3rem);
