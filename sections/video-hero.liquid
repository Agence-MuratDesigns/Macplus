{{ 'video-hero.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
   .section-{{ section.id }}-padding .video__hero--media.media::before {
    opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }




  

.video__hero--banner-content {
    display: flex;
    flex-direction: column;
}

@media screen and (min-width: 750px) {

  .video_hero_banner__content--top-left .video__hero--banner-grid {
    align-items: flex-start;
    justify-content: flex-start;
    padding-left: 8rem;
    padding-top: 8rem;
  }

  .video_hero_banner__content--top-center .video__hero--banner-grid{
    align-items: flex-start;
    justify-content: center;
  }

  .video_hero_banner__content--top-right .video__hero--banner-grid{
    align-items: flex-start;
    justify-content: flex-end;
    padding-right: 8rem;
    padding-top: 8rem;
  }

  .video_hero_banner__content--middle-left .video__hero--banner-grid{
    align-items: center;
    justify-content: flex-start;
  }

  .video_hero_banner__content--middle-center .video__hero--banner-grid{
    align-items: center;
    justify-content: center;
  }

  .video_hero_banner__content--middle-right .video__hero--banner-grid{
    align-items: center;
    justify-content: flex-end;
  }

  .video_hero_banner__content--bottom-left .video__hero--banner-grid {
      align-items: flex-end;
      justify-content: flex-start;
      padding-left: 8rem;
      padding-bottom: 8rem;
  }

  .video_hero_banner__content--bottom-center .video__hero--banner-grid {
    align-items: flex-end;
    justify-content: center;
  }

  .video_hero_banner__content--bottom-right .video__hero--banner-grid {
    align-items: flex-end;
    justify-content: flex-end;
    padding-right: 8rem;
    padding-bottom: 8rem;
  }

.show_filter_box  .video__hero--banner-content {
    background-color: #ffffff1f;
    backdrop-filter: blur(20px);
    padding: 50px;
    border-radius: 5px;
}
  
}
.video__hero--content-align-center {
    text-align: center;
}
.video__hero--content-align-left {
    text-align: left;
}
.video__hero--content-align-right {
    text-align: right;
}


.video__hero--banner-content .video__hero--banner-subheading {
    color: {{ section.settings.content_color }}!important;
}
.video__hero--banner-content h2.video__hero--banner__heading {
    color: {{ section.settings.content_color }}!important;
}
.video__hero--banner-content .video__hero--banner__text {
    color: {{ section.settings.content_color }}!important;
}
.video__hero--banner-content a.button.button--secondary {
    border-color: {{ section.settings.content_color }}!important;
    color:  {{ section.settings.content_color }}!important;
}
.video__hero--banner-content a.button.button--secondary:hover {
    background: {{ section.settings.button_hover_color }}!important;
    border-color: {{ section.settings.button_hover_color }}!important;
}
.video__hero--banner-content a.button.button--primary {
    background:  {{ section.settings.content_color }}!important;
    color:  {{ section.settings.button_hover_color }}!important;
}
.video__hero--banner-content a.button.button--primary:hover {
    background:  {{ section.settings.button_hover_color }}!important;
    color: {{ section.settings.content_color }}!important;
}
.video__hero--banner-content a.button svg {
    position: relative;
    top: 4px;
    width: 16px;
    height: 16px;
}

  
</style>

{% liquid
  assign container = ''
  if section.settings.container == 'container'
    assign container = 'container'
  elsif section.settings.container == 'container-fluid'
    assign container = 'container-fluid'
  else
    assign container = 'container-fluid px-0'
  endif
%}

<div class="video__hero--section section-{{ section.id }}-padding  video_hero_banner__content--{{ section.settings.desktop_content_position }}   {% if section.settings.show_filter_box  %} show_filter_box {% endif %}">
  <div class="{{ container }} {% unless section.settings.show_offset %}p-0{% endunless %}">
    <div class="video__hero--media-wrapper">
      <div
        class="video__hero--media media video--hero__media--{{ section.settings.height }} {% if section.settings.video == blank %} video-section__placeholder {% endif %}"
        {% if section.settings.height == 'adapt' and section.settings.video != blank %}
          style="padding-bottom: {{ 1 | divided_by: section.settings.video.aspect_ratio | times: 100 }}%;"
        {% endif %}
      >
        {% if section.settings.video != blank %}
          {{ section.settings.video | video_tag: autoplay: true, loop: true, controls: false, muted: true }}
        {% else %}
          <video
            class="video-playsinline"
            src="https://cdn.shopify.com/videos/c/o/v/fbb140fd46e3429eba459e1549dbbe38.mp4"
            playsinline=""
            autoplay=""
            muted=""
            loop=""
          ></video>
        {% endif %}
      </div>
      <div class="video__hero--banner-wrapper ">
        <div class="video__hero--banner-grid">
          <div class="video__hero--banner-content  video__hero--content-align-{{ section.settings.desktop_content_alignment }}">
            {%- for block in section.blocks -%}
              {% case block.type %}
                {%- when 'heading' -%}
                  <h2
                    class="video__hero--banner__heading {{ block.settings.heading_size }} mb-0"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.main_heading }}
                  </h2>
                {%- when 'subheading' -%}
                  <div class="video__hero--banner-subheading h6 mb-0" {{ block.shopify_attributes }}>
                    {{ block.settings.subheading | escape }}
                  </div>
                {%- when 'text' -%}
                  <div
                    class="video__hero--banner__text rte {{ block.settings.text_style }}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.text }}
                  </div>
                {%- when 'button' -%}
                  {% liquid
                    if block.settings.button_style == 'primary'
                      assign button_class = 'button--primary'
                    else
                      assign button_class = 'button--secondary'
                    endif
                  %}

                  {%- if block.settings.button_label != blank -%}
                    <div class="button__wrapper">
                      <a
                        {% if block.settings.button_link == blank %}
                          role="link" aria-disabled="true"
                        {% else %}
                          href="{{ block.settings.button_link }}"
                        {% endif %}
                        class="button button--{{ block.settings.button_size }} {{ button_class }} {% if block.settings.button_icon %} button--with-icon{% endif %}"
                        {{ block.shopify_attributes }}
                      >
                        {{ block.settings.button_label | escape }}

                        {% if block.settings.button_icon %}
                          <span class="button--icon button--icon-right"> {% render 'icon-arrow-right' %} </span>
                        {% endif %}
                      </a>
                    </div>
                  {%- endif -%}
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

