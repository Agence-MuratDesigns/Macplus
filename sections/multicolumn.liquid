{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }





    
  }

  .section-{{ section.id }} .underline--link {
    padding: 0;
    margin-top: 20px;
  }
  .section-{{ section.id }} .with--icon {
    padding: 0;
    margin-top: 20px;
  }

  .multicolumn-card__info>*+* {
    margin-top: 2.6rem;
  }
  .multicolumn-card__info p.mb-0 {
    margin-bottom: -10px !important;
  }
.blank_img {
    position: relative;
    display: block;
    overflow: hidden;
    min-height: 330px;
    background: #88B44E;
    margin-top: 23px;
}
.blank_img svg.placeholder-svg {
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    fill: #fff;
}

.multi_style_2-false.multicolumn-card__info h3.mb-0 {
    font-size: calc(var(--font-heading-size) * 1.9rem);
}
.multicolumn-card__info {
    padding: 2.5rem;
    padding-left: 6rem;
    padding-right: 6rem; 
}
.center .multi_style_2-true.multicolumn-card__info {
    box-shadow: none;
}

.center .multi_style_2-true.multicolumn-card__info {
    margin: 0 auto;
}
.multi_style_2-true.multicolumn-card__info {
    width: 100%;
    margin: 0;
    padding: 25px 20px;
    border-radius: 0px 0px 15px 15px;
}
.multicolumn-card__info .link.with--icon {
    text-decoration: none;
    font-weight: bold;
    color: rgba(var(--color-button),var(--alpha-button-background));
}
.multicolumn-card__info .link.with--icon span.right__btn_svg svg path {
    fill: rgba(var(--color-button),var(--alpha-button-background));
}
.service-txt-icon-img-area {
    display: flex;
    align-items: center;
    margin-bottom: 9px;
}
.service-txt-icon-img-area .service-icon-img img {
    width: 35px;
    height: 35px;
    overflow: hidden;
}
.service-txt-icon-img-area .service-icon-img {
    width: 80px;
    height: auto;
    background: rgb(var(--color-background));
    padding: 15px;
    margin-right: 15px;
    border-radius: 50px;
    display: flex;
    align-items: center;
    box-shadow: rgb(204, 219, 232) 3px 3px 6px 0px inset, rgba(255, 255, 255, 0.5) -3px -3px 6px 1px inset;
}
.multicolumn-card__image-wrapper .media {
    border-radius: 15px 15px 0px 0px;
}
.multi_style_2-true.multicolumn-card__info {
    top: 0;
    margin-bottom: -50px;
    padding-bottom: 33px;
    padding-left: 40px;
    padding-right: 40px;
}
.multicolumn-card.content-container {
    padding: 0 0;
    margin: 0 !important;
}
.multicolumn-list__item {
    margin-bottom: 0;
}
.center.more__btn_mrgn {
    margin-top: 40px;
}
.multi_style_2-true.multicolumn-card-spacing {
    margin-right: 0;
}
.multicolumn .title-wrapper-with-link {
    margin-bottom: 34px;
}
.multicolumn-card.content-container h3 {
    font-size: calc(var(--font-heading-size) * 2.0rem);
}
.multicolumn-list__item {
    position: relative;
}
{% if section.settings.counter_show %}
.multicolumn-list__item:before {
    content: "0"  counter(a);
    position: absolute;
    font-size: 35px;
    line-height: 1;
    top: 35px;
    right: 35px;
    font-weight: 900;
    -webkit-text-stroke: 1px rgb(var(--color-background));
    color: transparent;
    transition: all .3s;
    z-index: 4;
    background: #5c6ac400;
    backdrop-filter: blur(8px);
    /* padding: 12px; */
    border-radius: 100%;
    width: 80px;
    height: 80px;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
}
{% endif %}  
.blank_img.multi_style_2-true {
