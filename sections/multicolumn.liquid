            assign highest_ratio = block.settings.image.aspect_ratio
          endif
        endfor
      -%}
      {%- for block in section.blocks -%}
        {% liquid
          case block.settings.button_type
            when 'primary'
              assign button_class = 'button'
            when 'secondary'
              assign button_class = 'button button--secondary'
            when 'icon'
              assign button_class = 'link with--icon'
            else
              assign button_class = 'link underline--link'
          endcase
        %}

        <div
          id="Slide-{{ section.id }}-{{ forloop.index }}"
          class="multicolumn-list__item col {% if section.settings.column_alignment == 'left' %} left {% elsif section.settings.column_alignment == 'center' %} center {% elsif section.settings.column_alignment == 'right' %} right {% endif %} mb-30"
          {{ block.shopify_attributes }}
        >
