{% if section.settings.counter_show %}
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const listItems = document.querySelectorAll(".multicolumn-list__item");
  
    // Loop through the items and set a custom counter
    listItems.forEach((item, index) => {
      const counterValue = index + 1; // Starting from 1
      item.style.setProperty("--counter-value", counterValue);
  
      // Update the content dynamically
      const dynamicContent = `"0${counterValue}"`;
      const styleSheet = document.styleSheets[0];
      styleSheet.insertRule(
        `.multicolumn-list__item:nth-child(${counterValue}):before { content: ${dynamicContent}; }`,
        styleSheet.cssRules.length
      );
    });
  });

  
</script>
{% endif %}





