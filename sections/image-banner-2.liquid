{% liquid
  assign image_space = false
  if section.settings.image != blank and section.settings.image_2 != blank
    assign image_space = section.settings.show_space_between_image
  endif

  assign image_space_on_mobile = false
  if section.settings.image != blank and section.settings.image_2 != blank
    assign image_space_on_mobile = section.settings.show_space_between_image_on_mobile
  endif

  assign only_mobile_space = false
  if image_space == false and image_space_on_mobile
    assign only_mobile_space = true
  endif
  assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
     --padding-top: {{ section.settings.mobile_padding_top }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      --padding-top: {{ section.settings.padding_top }}px;
    }
  }

  #MainContent > :first-child .section--top-space-{{ section.id }} {
    padding-top: calc(var(--header-height) * var(--transparent-header-show) + var(--padding-top));
  }
  {% if section.settings.background_gradient != empty %}
    .image--banner.color-{{ section.settings.color_scheme }}{
      --gradient-background: {{ section.settings.background_gradient }};
      background: var(--gradient-background);
    }
  {% endif %}


.badge__image_area {
  max-width: 100%;
  height: auto;
  image-rendering: -webkit-optimize-contrast;
  image-rendering: crisp-edges;
  backface-visibility: hidden;
  transform: translateZ(0);
  -webkit-font-smoothing: subpixel-antialiased;
}

@media
(-webkit-min-device-pixel-ratio: 2),
(min-resolution: 192dpi) {
  .badge__image_area {
    image-rendering: pixelated;
  }
}

.image__grid.badge_inner_nrb {
    position: relative;
}
img.badge__image_area {
    position: absolute;
    z-index: 2;
    width: 250px;
    left: 0;
    right: 0;
    margin: auto;
    top: 0;
    bottom: 0;
}


  
{%- endstyle -%}

<div class="image--banner color-{{ section.settings.color_scheme }}  section--top-space-{{ section.id }} section-{{ section.id }}-padding">
  <div class="{% if section.settings.full_width %}container-fluid{% else %}container{% endif %}">
    <div class="image--banner-wrapper neonix_bnr">
      <div class="image--banner-grid row {% if section.settings.layout == "text_first" %}flex-row-reverse{% endif %}">
        <div class="col-md-7 image__grid  badge_inner_nrb">

            {% if section.settings.badge_image_enable %}
            <!-- Responsive Badge Image -->
            <img
              class="badge__image_area"
              srcset="
                {% if section.settings.image_badge.width >= 400 %}
                  {{ section.settings.image_badge | image_url: width: 400 }} 400w,
                {% endif %}
                {% if section.settings.image_badge.width >= 800 %}
                  {{ section.settings.image_badge | image_url: width: 800 }} 800w,
                {% endif %}
                {% if section.settings.image_badge.width >= 1200 %}
                  {{ section.settings.image_badge | image_url: width: 1200 }} 1200w,
                {% endif %}
                {% if section.settings.image_badge.width >= 1600 %}
                  {{ section.settings.image_badge | image_url: width: 1600 }} 1600w,
                {% endif %}
                {% if section.settings.image_badge.width >= 2000 %}
                  {{ section.settings.image_badge | image_url: width: 2000 }} 2000w,
                {% endif %}
                {{ section.settings.image_badge | image_url }} {{ section.settings.image_badge.width }}w
              "
              src="{{ section.settings.image_badge | image_url: width: 800 }}"
              sizes="(min-width: 1600px) 2000px,
                     (min-width: 1200px) 1600px,
                     (min-width: 800px) 1200px,
                     (min-width: 400px) 800px,
                     400px"
              alt="{{ section.settings.image_badge.alt | escape }}"
              height="{{ section.settings.image_badge.height }}"
              width="{{ section.settings.image_badge.width }}"
              loading="lazy"
              decoding="async"
              fetchpriority="high"
              {% if section.settings.image_badge.width >= 800 %}
                data-high-res="true"
              {% endif %}
            />
            {% endif %}
          
          <div class="image--banner-grid-inner  {% if image_space %} grid {% endif %} {%  if section.settings.image == blank and section.settings.image_2 == blank %} grid {% if section.settings.show_space_between_image %}banner--image-space-true{% endif %} {% if section.settings.show_space_between_image_on_mobile %}only--mobile--spacing-true{% endif %} {% endif %}grid--2-col-desktop {% if image_space %}banner--image-space-true{% endif %} {% unless image_space_on_mobile %} mobile--spacing-false{% endunless %} {% if only_mobile_space %}only--mobile--spacing-true{% endif %}">
            {%- if section.settings.image != blank -%}
              <div class="image__column {% if image_space %}grid__item{% endif %}">
                <div
                  class="banner__media media image--banner-media-height-{{ section.settings.image_height }} {% if section.settings.image == blank and section.settings.image_2 == blank %} placeholder{% endif %}"
                  {% if section.settings.image_height == 'adapt' and section.settings.image != blank %}
                    style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
                  {% endif %}
                >
                  {%- liquid
                    assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
                    if section.settings.image_2 != blank
                      assign image_class = 'banner__media-image-half'
                    endif
                    if section.settings.image_2 != blank and section.settings.stack_images_on_mobile
                      assign sizes = '(min-width: 750px) 50vw, 100vw'
                    elsif section.settings.image_2 != blank
                      assign sizes = '(min-width: 750px) 50vw, 100vw'
                    else
                      assign sizes = '100vw'
                    endif
                  -%}
                  {{
                    section.settings.image
                    | image_url: width: 3840
                    | image_tag:
                      loading: 'lazy',
                      width: section.settings.image.width,
                      height: image_height,
                      class: image_class,
                      sizes: sizes,
                      widths: widths
                  }}
                </div>
              </div>
            {%- elsif section.settings.image_2 == blank -%}
              <div class="image__column grid__item media image--banner-media-height-{{ section.settings.image_height }} {% if section.settings.image == blank %} placeholder{% endif %}">
                {{ 'hero-apparel-1' | placeholder_svg_tag: 'new-placeholder-svg' }}
              </div>
            {%- endif -%}
            {%- if section.settings.image_2 != blank -%}
              <div class="image__column {% if image_space %}grid__item{% endif %}">
                <div
                  class="banner__media media image--banner-media-height-{{ section.settings.image_height }} {% if section.settings.image != blank %} banner__media-half{% endif %}"
                  {% if section.settings.image_height == 'adapt' and section.settings.image_2 != blank %}
                    style="padding-bottom: {{ 1 | divided_by: section.settings.image_2.aspect_ratio | times: 100 }}%;"
                  {% endif %}
                >
                  {%- liquid
                    assign image_height_2 = section.settings.image_2.width | divided_by: section.settings.image_2.aspect_ratio
                    if section.settings.image != blank
                      assign image_class_2 = 'banner__media-image-half'
                    endif
                    if section.settings.image_2 != blank and section.settings.stack_images_on_mobile
                      assign sizes = '(min-width: 750px) 50vw, 100vw'
                    elsif section.settings.image_2 != blank
                      assign sizes = '(min-width: 750px) 50vw, 100vw'
                    else
                      assign sizes = '100vw'
                    endif
                  -%}
                  {{
                    section.settings.image_2
                    | image_url: width: 3840
                    | image_tag:
                      loading: 'lazy',
                      width: section.settings.image_2.width,
                      height: image_height_2,
                      class: image_class_2,
                      sizes: sizes,
                      widths: widths
                  }}
                </div>
              </div>
            {%- elsif section.settings.image == blank -%}
              <div class="image__column grid__item media image--banner-media-height-{{ section.settings.image_height }} {% if section.settings.image_2 == blank %} placeholder{% endif %}">
                {{ 'hero-apparel-1' | placeholder_svg_tag: 'new-placeholder-svg' }}
              </div>
            {%- endif -%}
          </div>
        </div>
        <div class="col-md-5 text__grid d-flex align-items-center">
          <div class="image--banner-content-inner image--banner-content-spacing-true  {% if section.settings.layout == "image_first" %}image--banner-image-first{% endif %}">
            {%- for block in section.blocks -%}
              {% case block.type %}
                {%- when 'heading' -%}
                  <h2
                    class="image-with-text__heading {{ block.settings.heading_size }}"
                    {{ block.shopify_attributes }}
                  >
                    {{- block.settings.heading -}}
                  </h2>
                {%- when 'caption' -%}
                  <p
                    class="image-with-text__text image-with-text__text--caption  {{ block.settings.text_style }} text-size-{{ block.settings.text_size }}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.caption | escape }}
                  </p>
                {%- when 'text' -%}
                  <div
                    class="image-with-text__text rte"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.text }}
                  </div>
                {%- when 'button' -%}
                  {% liquid
                    if block.settings.button_style == 'primary'
                      assign button_class = ''
                    else
                      assign button_class = 'button--secondary'
                    endif
                  %}

                  <div class="image--banner-button-wrapper">
                    {%- if block.settings.button_label != blank -%}
                      <a
                        {% if block.settings.button_link == blank %}
                          role="link" aria-disabled="true"
                        {% else %}
                          href="{{ block.settings.button_link }}"
                        {% endif %}
                        class="button button--{{ block.settings.button_size }} {{ button_class }}"
                        {{ block.shopify_attributes }}
                      >
                        {{ block.settings.button_label | escape }}
                        <span class="right__btn_svg">
                          <svg id="fi_14440636" enable-background="new 0 0 512 512" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg"><g id="Layer_2_00000103972821825980288310000012755641873027120305_"><g id="Layer_2_copy_13"><g id="_113"><path d="m479 0h-386.9c-18.2 0-33 14.8-33 33s14.8 33 33 33h307.1l-389.5 389.6c-12.9 12.9-12.9 33.8 0 46.7s33.8 12.9 46.7 0l389.5-389.6v307.1c0 18.2 14.8 33 33 33s33-14.8 33-33v-386.8c.1-18.2-14.7-33-32.9-33z"></path></g></g></g></svg>
                        </span>
                      </a>
                    {%- endif -%}

                    {% comment %} Video button start {% endcomment %}
                    {% if block.settings.video_button %}
                      <div class="video--button-wrapper">
                        <noscript>
                          <a
                            href="{{ block.settings.video_url }}"
                            class="collage-card__link"
                          >
                            {%- render 'icon-play' -%}
                            <span class="visually-hidden">{{ 'sections.video.load_video' | t }}</span>
                          </a>
                        </noscript>
                        <modal-opener class="no-js-hidden" data-modal="#PopupModal-{{ block.id }}">
                          <div class="deferred-media">
                            <button
                              class="image--banner__video-button  {% if block.settings.button_size == "small" %}small--video-button{% endif %}"
                              type="button"
                              aria-label="{{ 'sections.video.load_video' | t }}"
                              aria-haspopup="dialog"
                              data-media-id="{{ block.settings.video_url.id }}"
                            >
                              {%- render 'icon-play-solid' -%}
                              <span class="visually-hidden">{{ 'sections.video.load_video' | t }}</span>
                            </button>
                          </div>
                        </modal-opener>
                        <modal-dialog
                          id="PopupModal-{{ block.id }}"
                          class="modal-video media-modal"
                        >
                          <div
                            class="modal-video__content"
                            role="dialog"
                            aria-label="{{ block.settings.description | escape }}"
                            aria-modal="true"
                            tabindex="-1"
                          >
                            <button
                              id="ModalClose-{{ block.id }}"
                              type="button"
                              class="modal-video__toggle"
                              aria-label="{{ 'accessibility.close' | t }}"
                            >
                              {% render 'icon-close' %}
                            </button>
                            <div class="modal-video__content-info">
                              <deferred-media class="modal-video__video template-popup">
                                <template>
                                  {%- if block.settings.video_url.type == 'youtube' -%}
                                    <iframe
                                      src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}?enablejsapi=1"
                                      class="js-youtube"
                                      allow="autoplay; encrypted-media"
                                      allowfullscreen
                                      title="{{ block.settings.description | escape }}"
                                    ></iframe>
                                  {%- else -%}
                                    <iframe
                                      src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}"
                                      class="js-vimeo"
                                      allow="autoplay; encrypted-media"
                                      allowfullscreen
                                      title="{{ block.settings.description | escape }}"
                                    ></iframe>
                                  {%- endif -%}
                                </template>
                              </deferred-media>
                            </div>
                          </div>
                        </modal-dialog>
                      </div>
                    {% endif %}
                    {% comment %} Video button end {% endcomment %}
                  </div>
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

